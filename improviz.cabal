name:                improviz
version:             0.9.2.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/rumblesan/improviz#README.md
license:             BSD3
license-file:        LICENSE
author:              Guy John
maintainer:          guy@rumblesan.com
copyright:           Guy John and contributors
category:            Graphics
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable improviz
  hs-source-dirs:      src
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
                       -fwarn-unused-binds -fwarn-unused-imports
  build-depends:       base >= 4.8 && < 5
                     , aeson
                     , bytestring
                     , containers
                     , file-embed
                     , filepath
                     , freetype2
                     , GLFW-b
                     , GLURaw
                     , hosc
                     , JuicyPixels
                     , lens-simple
                     , linear
                     , megaparsec >= 7
                     , mtl
                     , OpenGL
                     , OpenGLRaw
                     , optparse-applicative
                     , parser-combinators >= 1
                     , random
                     , safe
                     , scotty
                     , split
                     , stm
                     , text
                     , time
                     , transformers
                     , vector
                     , warp
                     , wavefront
                     , yaml
  other-modules:       Improviz
                     , Improviz.Runtime
                     , Improviz.SystemVars
                     , Improviz.UI
                     , Configuration
                     , Configuration.CLI
                     , Configuration.Font
                     , Configuration.Geometries
                     , Configuration.Materials
                     , Configuration.OSC
                     , Configuration.Screen
                     , Configuration.Textures
                     , Gfx
                     , Gfx.Commands
                     , Gfx.Context
                     , Gfx.Engine
                     , Gfx.FontHandling
                     , Gfx.Geometries
                     , Gfx.LoadShaders
                     , Gfx.Matrices
                     , Gfx.OpenGL
                     , Gfx.PostProcessing
                     , Gfx.Setting
                     , Gfx.SettingMap
                     , Gfx.Materials
                     , Gfx.TextRendering
